# Matchfile - macOS code signing using match
# Prerequisites documented in ReMorse/ios/fastlane/Matchfile

git_url(ENV["MATCH_GIT_URL"])
storage_mode("git")
git_branch('batteryboirecharged')  # Branch for this project
app_identifier("com.nirnshard.batteryboirecharged")

# Team ID from environment
team_id(ENV["TEAM_ID"])

# Developer ID for direct distribution (not App Store)
type("developer_id")

# Optimization for CI
shallow_clone(true)
skip_confirmation(true)

# Platform
platform("macos")
